<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chasejacobs.eventure.MainActivity"
    android:nestedScrollingEnabled="false"
    android:onClick="unitTestDatabase">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next page"
        android:id="@+id/testNext"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/unitTestDatabase"
        android:layout_toStartOf="@+id/unitTestDatabase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Database"
        android:id="@+id/unitTestDatabase"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newTest"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="NothingYet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Local Events"
        android:id="@+id/searchEvents"
        android:layout_above="@+id/testNext"
        android:layout_centerHorizontal="true"
        android:onClick="searchPage" />
</RelativeLayout>
